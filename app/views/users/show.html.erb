<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      
    </section>
    <section>
      <div>
        <% unless @user.profile.blank? %>
          <h4>Profile</h4>
          <p><%= @user.profile %></p>
        <% end %>
        
        <% unless @user.area.blank? %>
          <h4>Area</h4>
          <p><%= @user.area %></p>
        <% end %>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>